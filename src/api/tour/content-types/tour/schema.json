{
  "kind": "collectionType",
  "collectionName": "tours",
  "info": {
    "singularName": "tour",
    "pluralName": "tours",
    "displayName": "Tour",
    "description": "Tour packages and experiences"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "highlights": {
      "type": "json"
    },
    "duration": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "basePrice": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "maxGroupSize": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "difficulty": {
      "type": "enumeration",
      "enum": ["easy", "moderate", "challenging"],
      "default": "easy"
    },
    "tags": {
      "type": "json"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "itinerary": {
      "type": "json"
    },
    "included": {
      "type": "json"
    },
    "excluded": {
      "type": "json"
    },
    "metaTitle": {
      "type": "string"
    },
    "metaDescription": {
      "type": "text"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "destination": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::destination.destination",
      "inversedBy": "tours"
    }
  }
}
